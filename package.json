{
  "name": "pet-project",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm --filter api dev && pnpm --filter web dev",
    "lint": "pnpm --filter api lint && pnpm --filter web lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.4.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
